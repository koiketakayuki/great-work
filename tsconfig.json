{
  "compilerOptions": {
      "outDir": "./dist/",
      "rootDirs": ["src", "stories"],
      "declaration": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["es5", "es6", "dom"],
      "strict": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": false
  },
  "include": [
      "src"
  ],
  "exclude": ["node_modules", "dist", "test"]
}